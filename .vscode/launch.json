{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Makefile Build",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/main.exe",  // Path to your executable
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }